<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Predicate" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Base application theme. -->
        <item name="fontBold">@font/roboto_bold</item>
        <item name="fontRegular">@font/roboto_regular</item>
        <item name="fontMedium">@font/roboto_medium</item>
        <item name="fontLight">@font/roboto_light</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryLightColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>